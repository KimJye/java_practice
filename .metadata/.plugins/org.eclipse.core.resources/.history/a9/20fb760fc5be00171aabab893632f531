package hw7_1;
/*
 * 2017/11/01
 * 김지혜
 * 스택 괄호 검사
 */
import java.util.Scanner;
import java.util.Stack;
public class testPair {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("hw7_1:김지혜");
		Scanner input = new Scanner(System.in);
		String data;//괄호 입력 변수
		String pair;
		int top=-1;
		int stackSize=0;

		Stack<String> s =new Stack<String>();

		System.out.println("괄호 입력: ");

		for(int i=0;i<10;i++){
			data=input.nextLine();

			switch(data){
			case "(":
			case "{":
			case "[":
			case "<":
				s.push(data);
				stackSize++;
				break;

			case ")":
			case "}":
			case "]":
			case ">":
				if(s.isEmpty()){
					System.out.println("스택이 비어있습니다");
				}else{
					pair=s.pop();
					stackSize--;
					if(((pair==")"&& data=="(")|| (pair=="}"&& data=="{")||
							(pair=="]"&& data=="[")||(pair==">"&& data=="<"))){
						System.out.println("올바른 괄호식입니다");
					}else{
						System.out.println("올바르지 않은 괄호식입니다");
						break;
					}
					break;}

			default: System.out.println("잘못입력했습니다.");break;
			}
		}
		if(top==-1 && stackSize==0){
			System.out.println("올바른 괄호식입니다");
		}else{
			System.out.println("올바른 괄호식이 아닙니다");
		}

	}

}
